<!-- base.html.twig -->
{% set menus = menu_service.findAll %}
{# verifier le nombre de menu #}
{# {%  dump(menus)   %} #}

{% set options = option_service.findAll %}

{%  dump(options)  %}

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <title>Blog-{% block title %}{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>⚫️</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>
  <body>
    {% if is_granted('ROLE_AUTHOR') %}
      
   
    <nav class="py-2 bg-dark border-bottom">
      <div class="container d-flex flex-wrap">
        <div class="dropdown">
          <a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          {{ options['blog_title']}}
          </a>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminDashboard">
            <li><a class="dropdown-item" href="{{ path('admin') }}">Tableau de bord</a></li>
        {% if  is_granted('ROLE_ADMIN') %}
             <li><a class="dropdown-item" href="{{ea_gen_url('MenuCrudController')}}">Menus</a></li>
        {% endif %}
         
          </ul>
        </div>
        <div class="dropdown">
          <a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Ajouter
          </a>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminAdd">
            <li><a class="dropdown-item" href="{{ea_gen_url('ArticleCrudController', 'new')}}">Article</a></li>
            <li><a class="dropdown-item" href="{{ea_gen_url('PageCrudController', 'new')}}">Page</a></li>
          </ul>
        </div>
      </div>
    </nav>

     {% endif %}

    <div class="container">
      <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none" href="{{ path('app_home') }}">
          <span class="fs-4">{{ options['blog_title']}}</span>
        </a>
        <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link text-dark" href="{{ path('a_propos') }}">A propos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="{{ path('app_apprentissage') }}">Trouble Apprentissage</a>
          </li>
          {% for menu in menus %}
            {% if menu.subMenus.count > 0 %}
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown{{ menu.id }}" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    {{ menu.name }}
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown{{ menu.id }}">
                    {% for subMenu in menu.subMenus %}
                      <li><a class="dropdown-item" href="{{ subMenu|menuLink }}">{{ subMenu.name }}</a></li>
                    {% endfor %}
                  </ul>
                </li>
            {% else %}
                <li class="nav-item">
                  <a class="nav-link text-dark" href="{{ menu|menuLink }}">{{ menu.name }}</a>
                </li>
            {% endif %}
          {% endfor %}

        {# {% dump(options['users_can_register']) %} #}
          {% if not  is_granted('IS_AUTHENTICATED_FULLY')   %}
        {% if '1' == options['users_can_register'] %}
          
        
          <li class="nav-item">
            <a class="nav-link text-dark" href="{{ path('app_register') }}">S'inscrire</a>
          </li>
    {% endif %}
          <li class="nav-item">
            <a class="nav-link text-dark" href="{{ path('app_login') }}">Se connecter</a>
          </li>

        {% else %}

      <div class='dropdown'>

        <a class="nav nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false">
         {{app.user.username | capitalize}}
          </a>
           <ul class="dropdown-menu">
                  
                      <li><a class="dropdown-item" href="{{ path('app_profile', {username: app.user.username}) }}">Mon profil</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                  </ul>
      </div>

        {% endif %}
         <li class="nav-item">
            <a class="nav-link text-dark" href="{{ path('app_contact') }}">Contact</a>
          </li>
        </ul>
      </header>
    </div>
    {% block body %}{% endblock %}
    <div class="container">
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <div class="col-md-4 d-flex align-items-center">
          <span class="copyright">
            {{ 'now' | date('Y') }} {{ options['blog_copyright'] }}
          </span>
        </div>
      </footer>
    </div>
   
  </body>
</html>
